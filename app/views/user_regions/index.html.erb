<p id="notice"><%= notice %></p>

<h1>User Regions</h1>

<table class="zui-table">
  <thead>
    <tr>
      <th>User</th>
      <th>Region</th>
      <th>show</th>
      <th>edit</th>
      <th>delete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_regions.each do |user_region| %>
      <tr>
        <td><%= user_region.user&.email%></td>
        <td><%= user_region.region&.region_name%></td>
        <td><%= link_to 'Show', user_region %></td>
        <td><%= link_to 'Edit', edit_user_region_path(user_region) %></td>
        <td><%= link_to 'Destroy', user_region, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

